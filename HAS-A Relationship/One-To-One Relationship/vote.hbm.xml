<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="beans.Vote" table="vote" schema="hibernate">
		<id name="vtid">
			<generator class="foreign">
				<param name="property">voter</param>
			</generator>
		</id>
		<property name="pname" />
		<property name="cdate" />
		<one-to-one name="voter" class="beans.Voter"></one-to-one>
	</class>
</hibernate-mapping>